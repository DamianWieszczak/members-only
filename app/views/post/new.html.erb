<h1>New Post</h1>

<%= form_with model: @post do |f| %>

  <%= f.label :title %><br>
  <%= f.text_field :title, autofocus: true, placeholder: "title", class: "form-control" %>

  <%= f.label :description %>
  <%= f.text_area :description, placeholder: "description", class: "form-control" %>

  <%= f.submit %>
<% end %>
