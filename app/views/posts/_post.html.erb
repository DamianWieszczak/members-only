<% posts.each do |post| %>
  <div class="card m-4">
    <div class="card-body">
      <h5 class="card-title"><b><%= post.title %></b></h5>
      <p class="card-text"><%= post.description %></p>
      <% if user_signed_in? %>
        <em>~ <%= post.user.username %></em>
      <% else %>
        <em>~ Anonymous</em>
      <% end %>
    </div>
    <div class="card-footer text-muted">
      <small>Created <%= time_ago_in_words(post.created_at) %> ago</small>
    </div>
  </div>
<% end %>